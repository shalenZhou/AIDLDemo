<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/bindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bind service"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/unbindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="unbind service"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bindService" />

    <Button
        android:id="@+id/addPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add person"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/unbindService" />

    <Button
        android:id="@+id/getPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get person"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/addPerson" />

    <TextView
        android:id="@+id/showMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/getPerson"
        tools:text="测试"/>

</androidx.constraintlayout.widget.ConstraintLayout>